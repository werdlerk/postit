<%= render "shared/breadcrumb", nodes: [link_to("Categories"), "#{@category.name}"] %>

<%= render "shared/content_title", title: "Posts for category '#{@category.name}'" %>

<% if @category.posts.empty? %>
  <div class="alert alert-info"%>
    <strong>No posts found</strong> with the category '<%= @category.name %>'.
  </div>
<% else %>
  <%= render @category.posts %>
<% end %>