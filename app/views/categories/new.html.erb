<%= render 'shared/content_title', title: "New Category" %>

<% if @category.errors.present? %>
  <div class="alert alert-error">
    <strong>Your post could not be saved due to the following errors:</strong>
    <ul>
    <% @category.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>  
<% end %>

<%= form_for @category do |f| %>
  <div class="well">
    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-actions">
      <%= f.button "Save", :type => "submit", :class => "btn btn-primary" %>
      <%= link_to "Cancel", posts_path, :class => "btn" %>
  </div>
<% end %>