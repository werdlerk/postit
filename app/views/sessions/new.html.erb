<style type="text/css">
  body {
    background-color: #f5f5f5;
  }

  .form-signin {
    max-width: 300px;
    padding: 19px 29px 29px;
    margin: 0 auto 20px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
       -moz-border-radius: 5px;
            border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
       -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
  }
  .form-signin .form-signin-heading,
  .form-signin .checkbox {
    margin-bottom: 10px;
  }
  .form-signin input[type="text"],
  .form-signin input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 15px;
    padding: 7px 9px;
  }
</style>


<%= form_tag login_path, class: "form-signin" do %>
  <h2 class="form-signin-heading">Login</h2>

  <%= render 'layouts/messages' %>

  <%= text_field_tag :username, params[:username] || '', placeholder: "Username", class: "input-block-level" %>
  <%= password_field_tag :password, params[:password] || '', placeholder: "Password", class: "input-block-level" %>

  <%= label_tag :remember_me, class: "checkbox" do %>
    <%= check_box_tag :remember_me %> Remember me
  <% end %>

  <%= submit_tag "Login", class: "btn btn-large btn-primary" %>

  <%= link_to "No account?", register_path, class: "pull-right" %>

<% end %>
