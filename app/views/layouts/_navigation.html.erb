<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to "Postit!", root_path, :class => "brand" %>

      <div class="nav-collapse collapse">
        <ul class="nav">

          <!-- <li><a href="/">Home</a></li> -->

          <!-- Categories dropdown -->
          <li class="dropdown">
            <%= link_to "#", :class => "dropdown-toggle", "data-toggle" => "dropdown" do %>
              Categories
              <b class="caret" ></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Category.all.each do |category| %>
                <li><%= link_to category.name, category_path(category) %></li>
              <% end %>
              
              <% if logged_in? %>
                <li class="divider"></li>
                <li>
                  <%= link_to new_category_path do %>
                    <i class="icon-plus"></i>
                    New Category
                  <% end %>
                </li>
              <% end %>
              <!-- <li>
                <%= link_to categories_path do %>
                  <i class="icon-tags"></i>
                  Edit Categories
                <% end %>
              </li> -->
            </ul>
          </li>
        </ul>

        <%= form_tag("/posts/search", method: :get, enforce_utf8: false, class: "navbar-search pull-left") do %>
          <%= search_field_tag(:q, nil, class: "search-query", placeholder: "Search") %>
        <% end %>

        <ul class="nav pull-right">
          <% if logged_in? %>
            <li class="dropdown">
              <%= link_to "#", :class => "dropdown-toggle", "data-toggle" => "dropdown" do %>
                <i class="icon-user"></i>
                <%= current_user.username %>
                <b class="caret" ></b>
              <% end %>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to new_post_path do %>
                    <i class="icon-pencil"></i>
                    New Post
                  <% end %>
                </li>
                <li>
                  <%= link_to logout_path do %>
                    <i class="icon-eject"></i>
                    Logout
                  <% end %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>

        <% if not_logged_in? %>
          <%= form_tag('', class: "navbar-form pull-right") do %>
            <%= link_to login_path, class: "btn" do %>
              <i class="icon-lock"></i>
              Login  
            <% end %>

            <%= link_to register_path, class: "btn" do %>
              <i class="icon-briefcase"></i>
              Register
            <% end %>
          <% end %>
          
        <% end %>


